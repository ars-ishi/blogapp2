$('#article-facorite-btn-<%= @article.id %>').html(
  "<%= j(render partial: 'article_favorites/favorite', locals: { article: @article }) %>"
);
$('#article-facorite-count-<%= @article.id %>').html(
  "<%= j(render partial: 'article_favorites/favorite_count', locals: { article: @article }) %>"
);
if ($('.wide-view').is(':visible')) {
  $('.facorite-btn-wrap > a').addClass('tooltipped');
  $('.tooltipped').tooltip();
}
