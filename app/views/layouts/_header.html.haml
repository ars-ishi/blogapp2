%nav
  .nav-wrapper.container
    = link_to 'SiteName', root_path, class: 'brand-logo left site-name'
    %ul.right
      - if user_signed_in?
        .wide-view
          %li
            = link_to new_article_path, class: 'tooltipped', 'data-tooltip':'投稿する' do
              %i.material-icons> create
          %li
            = link_to user_path(current_user), class: 'tooltipped', 'data-tooltip':'マイページ' do
              %i.material-icons> person
          %li
            = link_to destroy_user_session_path, class: 'tooltipped', 'data-tooltip':'ログアウト', method: :'delete' do
              %i.material-icons> exit_to_app
        .mobile-view
          %li
            = link_to '#', class: 'dropdown-trigger', 'data-target': 'dropdown1' do
              %i.material-icons> view_module
            %ul#dropdown1.dropdown-content.index-menu
              %li
                = link_to new_article_path do
                  %i.material-icons> create
                  投稿する
              %li
                = link_to user_path(current_user) do
                  %i.material-icons> person
                  マイページ
              %li
                = link_to destroy_user_session_path, method: :'delete' do
                  %i.material-icons> exit_to_app
                  ログアウト
      - else
        .wide-view
          %li
            = link_to new_user_session_path, class: 'tooltipped', 'data-tooltip':'ログイン' do
              %i.material-icons> exit_to_app
          %li
            = link_to new_user_registration_path, class: 'tooltipped', 'data-tooltip':'会員登録' do
              %i.material-icons> person_add
        .mobile-view
          %li
            = link_to new_user_session_path do
              %i.material-icons> exit_to_app
          %li
            = link_to new_user_registration_path do
              %i.material-icons> person_add
