.nav-index
  %nav
    .nav-wrapper.container
      = link_to 'SiteName', root_path, class: 'brand-logo left site-name'
      .right-align.dropdown-menu
        = link_to '#', class: 'dropdown-trigger', 'data-target': 'dropdown1' do
          %i.material-icons.dropdown-ic view_module
        %ul#dropdown1.dropdown-content.index-menu
          - if user_signed_in?
            %li
              = link_to new_article_path do
                %i.material-icons> create
                投稿する
            %li
              = link_to root_path do
                %i.material-icons> favorite
                お気に入り
            %li
              = link_to root_path do
                %i.material-icons> person
                マイページ
            %li
              = link_to destroy_user_session_path, method: :'delete' do
                %i.material-icons> exit_to_app
                ログアウト
          - else
            %li
              = link_to new_user_session_path do
                %i.material-icons> person
                ログイン
            %li
              = link_to new_user_registration_path do
                %i.material-icons> person_add
                会員登録
